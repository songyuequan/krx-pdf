<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ll_tool_bar"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:layout_centerHorizontal="true"
              android:layout_alignParentBottom="true">

  <Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:onClick="onClick"
    android:id="@+id/bt_pdf_pre_page"
    android:text="@string/string_pdf_pre"/>
  <Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:onClick="onClick"
    android:id="@+id/bt_pdf_next_page"
    android:text="@string/string_pdf_next"/>
  <Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:onClick="onClick"
    android:id="@+id/bt_pdf_max"
    android:text="@string/string_pdf_max"/>
  <Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:onClick="onClick"
    android:id="@+id/bt_pdf_min"
    android:text="@string/string_pdf_min"/>
</LinearLayout>